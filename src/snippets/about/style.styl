.about 
    position: relative
    padding-top: 85px
    padding-bottom: 40px 
    &__container 
        { container }
        position: relative 
        z-index: 10
    &__content 
        max-width: 460px
    &__footer 
        padding: 40px 0 190px
    &__banner 
        position: absolute 
        top: 0 
        left: 0 
        width: 100% 
        height: 100%

@media (min-width: 992px)
    .about 
        padding-top: 250px 
        padding-bottom: 150px
        &__footer 
            padding-bottom: 40px