.diff 
    box-before(#fff)
    padding-bottom: 100px
    &__container 
        { container }
    &__header 
        padding: 30px 0
    &__main 
        display: flex 
        flex-flow: row wrap 
        justify-content: center 
        align-items: flex-start
    
    &__list 
        display: flex
        justify-content: space-between 
        align-items: center
        flex-flow: row wrap
        max-width: 370px
        margin: 0 -10px 
    
    &__icon 
        height: 70px 
        display: flex 
        justify-content: center 
        align-items: center
    &__item 
        flex: 0 0 140px
        font-size: 12px
        font-weight: bold 
        line-height: 1.5
        color: #999999
        text-transform: uppercase 
        text-align: center 
        padding: 15px 0
        svg 
            fill: color_primary
        
        &--help 
            padding: 25px 0

    &__banner 
        margin-top: 50px 

    &__actions 
        text-align: right 


@media (min-width: 992px)
    .diff 
        &__item 
            flex: 0 0 145px
        &__main 
            flex-wrap: nowrap
            justify-content: space-between
        &__banner 
            margin-left: 140px
        &__actions 
            margin-top: -40px