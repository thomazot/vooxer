.faq 
    &__item 
        margin-top: 20px 

    &__label 
        display: flex 
        justify-content: flex-start 
        align-items: center 
        min-height: 50px 
        padding: 10px 20px 
        font-size: 15px
        font-weight: bold 
        color: #333 
        box-shadow: 0px 2px 5px 0px rgba(51, 51, 51, 0.25)
        cursor: pointer
    
    &__list 
        + .faq__title
            margin-top: 50px


    &__content 
        display: none 
        padding: 20px 
        font-size: 15px
        font-weight: regular 
        color: #666
        p + p 
            margin-top: 20px 