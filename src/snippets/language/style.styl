.language 
    position: relative 
    max-height: 31px
    overflow: hidden
    padding: 1px
    margin-top: -4px
    transition: all .1s ease
    border-radius: 2px
    display: flex 
    flex-flow: column nowrap
    svg 
        fill: #fff 
    &:before 
        content: ''
        position: absolute 
        top: 0 
        left: 0 
        z-index: 10
        width: 100% 
        height: 100% 
        background: rgba(0,0,0,0)
    &__item 
        flex: 0 0 100%
        min-height: 0
        display: flex 
        justify-content: space-between
        align-items: center 
        border: 0
        padding: 0 9px
        background: none 
        font-size: 12px 
        color: #fff 
        height: 33px
        min-height: 33px
        &:hover 
            background: rgba(255,255,255, .1)
        &[aria-selected=true] 
            order: -1
    &__label 
        margin-left: 8px
    &__icon 
        width: 31px
    &[aria-expanded=true]
        background: color_primary
        max-height: 400px
        &:before 
            display: none 