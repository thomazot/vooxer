.lightbox 
    &__background 
        position: fixed
        top: 0 
        left: 0 
        z-index: 400
        width: 100% 
        height: 100% 
        background: rgba(0,0,0,.5)
        opacity: 0 
        visibility: hidden
        transition: all .2s ease-in-out
        [aria-hidden=false] &
            opacity: 1 
            visibility: visible
    &__container 
        position: fixed 
        top: 50% 
        left: 50% 
        z-index: 500
        width: 100% 
        height: 100% 
        opacity: 0 
        visibility: hidden
        transition: all .2s ease-in-out
        border-radius: 2px
        background: #fff 
        transform: translateX(-50%) translateY(-50%) scale(.9)
        [aria-hidden=false]  &
            opacity: 1 
            visibility: visible

            transform: translateX(-50%) translateY(-50%) scale(1)
            animation: animateOpenCenter 100ms 1 ease
    &__inner 
        height: 100%
        padding: 20px 
        overflow-y: auto
        max-height: 100%
    &__close 
        position: absolute 
        top: 15px
        right: 15px
        display: flex 
        justify-content: center 
        align-items: center 
        width: 30px
        height: 30px
        box-shadow: 0 0 10px rgba(0,0,0,.2)
        border: 0 
        border-radius: 50% 
        background: #fff 
        svg 
            width: 12px
            height: 12px
            fill: color_primary
    &__main, &__header 
        width: 100%

    &__header 
        flex: 0 0 auto 

    &__main 
        flex: 1 1 auto

@media (min-width: 992px)
    .lightbox 
        &__container 
            width: auto 
            height: auto

            [aria-hidden=false] &
                position: absolute

                transform: translateX(-50%)
                max-height: none 
        &__inner 
            padding: 20px 50px 
            max-height: none
            overflow: visible
            .video &
                padding: 0 
                video 
                    display: block
                    width: 100%
                    height: 100% 
                    object-fit: cover
        &__close 
            top: -15px