.spotlight 
    position: relative
    z-index: 90
    margin-top: -200px
    &__figure img
        min-width: 100% 
        display: block
    &__actions 
        margin-top: 20px
    &__text 
        font-size: 14px
        font-weight: regular 
        color: #666666
        p + p 
            margin-top: 10px
@media (min-width: 992px)
    .spotlight 
        background: #fff 
        margin-top: -300px
        box-shadow: 0px 2px 5px 0px rgba(0, 51, 255, 0.25)

        &__container 
            display: flex 
        &__figure 
            flex: 0 0 auto
            min-width: 0
        &__content 
            flex: 1 1 auto 
            min-width: 0
            padding: 20px 
        margin-bottom: 100px